{
    "name": "roteiro-ferias-app",
    "version": "1.0.0",
    "description": "Aplicação web que consome API de login integrada com roteiro de férias",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test": "npm run test:clean && npm run test:run && npm run test:report",
        "test:run": "cypress run",
        "test:open": "cypress open",
        "test:report": "npm run test:merge && npm run test:generate && npm run test:open-report",
        "test:merge": "mochawesome-merge cypress/reports/mochawesome/*.json > cypress/reports/mochawesome/merged-report.json",
        "test:generate": "marge cypress/reports/mochawesome/merged-report.json --reportDir cypress/reports/mochawesome --inline",
        "test:open-report": "node open-report.js",
        "test:clean": "rm -rf cypress/reports/mochawesome && mkdir -p cypress/reports/mochawesome",
        "test:full": "npm run test:clean && npm run test",
        "test:ci": "npm run test:clean && npm run test:run && npm run test:merge && npm run test:generate",
        "start:ci": "node server.js &",
        "health-check": "curl -f http://localhost:3000/health || exit 1",
        "wait-for-server": "npx wait-on http://localhost:3000/health --timeout 30000",
        "install-deps": "npm install"
    },
    "keywords": [
        "express",
        "materialize",
        "login",
        "api",
        "roteiro",
        "ferias",
        "cypress"
    ],
    "author": "Marcelo OM30",
    "license": "MIT",
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "node-fetch": "^3.3.2"
    },
    "devDependencies": {
        "cypress": "^13.6.0",
        "mochawesome": "^7.1.3",
        "mochawesome-merge": "^4.3.0",
        "mochawesome-report-generator": "^6.2.0",
        "nodemon": "^3.0.1",
        "wait-on": "^8.0.4"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}